#-----------------------------------------------------------------------------
# Generic Makefile
#-----------------------------------------------------------------------------

#-----------------------------------------------------------------------------
# Set Compiler and Flags
#--------------------------------------------------------------------------
CC   = gcc
OPTS = -Og
DEBUG = -g

#--------------------------------------------------------------------
# Set up the Flags
#--------------------------------------------------------------------
CFLAGS   = $(OPTS) $(DEBUG)

#--------------------------------------------------------------------
# Set up the targets and prepare the compiling options
#--------------------------------------------------------------------
TARGETS=$(basename $(wildcard *.c))
all: $(TARGETS)

%: %.c 
	${CC} ${CFLAGS} $< -o $@ 

#--------------------------------------------------------------------
# Cleans objects and executables
#--------------------------------------------------------------------
clean:
	rm -f $(TARGETS) foo.c

